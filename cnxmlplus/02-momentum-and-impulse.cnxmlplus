<answer>
      <para><emphasis effect="bold">Question 4.1</emphasis></para>
      <latex display="block">
        \begin{align*}
          v_{TP} &amp; = v_{TG} - v_{PG} \\
                 &amp; =  <number>40</number>-<number>10</number> \\
                 &amp; =  \text{30 m}\cdot\text{s}^{-1} \quad \text{east}
        \end{align*}
      </latex>
      <para><emphasis effect="bold">OR</emphasis></para>
      <latex display="block">
        \begin{align*}
          v_{TP} &amp; = v_{TG} + v_{PG} \\
                 &amp; =  <number>40</number>+(-<number>10</number>) \\
                 &amp; =  \text{30 m}\cdot\text{s}^{-1} \quad \text{east} \\
        \end{align*}
      </latex>
      <para>(2 marks)</para>

      <para><emphasis effect="bold">Question 4.2</emphasis></para>
      <para><emphasis effect="bold">Option 1:</emphasis></para>
      <latex display="block">
        \begin{align*}
          v_{BT} &amp; = v_{BP} - v_{TP} \\
                 &amp; =  <number>100</number>-<number>30</number> \\
                 &amp; =  \text{70 m}\cdot\text{s}^{-1} \quad \text{east} \\
        \end{align*}
      </latex>
      <para><emphasis effect="bold">Option 2:</emphasis></para>
      <latex display="block">
        \begin{align*}
          v_{BT} &amp; = v_{BP} + v_{PT} \\
                 &amp; =  <number>100</number>+(-<number>30</number>) \\
                 &amp; =  \text{70 m}\cdot\text{s}^{-1} \quad \text{east} \\
        \end{align*}
      </latex>
      <para><emphasis effect="bold">OR</emphasis></para>
      <latex display="block">
        \begin{align*}
