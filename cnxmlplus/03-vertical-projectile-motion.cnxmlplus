                    \psdot[linecolor=purple](0,3) \psdot[linecolor=purple](0,-3)
                    \psdot[linecolor=purple](9,0) 
                    \psdot[linecolor=purple](12,0) 
                    \psdot[linecolor=purple](6,-3)
                    \psdot[linecolor=purple](12,-3)
