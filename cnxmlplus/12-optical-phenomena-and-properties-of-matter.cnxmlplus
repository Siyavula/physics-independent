                <para>For <unit_number><number>650</number><unit>nm</unit></unit_number>:</para>
                

                <latex display="block">
		\begin{align}
		 E&amp; = \frac{hc}{\lambda }\\
		 &amp; = \frac{\left(<number><coeff>6.63</coeff><exp>-34</exp></number>\right)\times \left(<number><coeff>3.00</coeff><exp>8</exp></number>\right)}{<number><coeff>650</coeff><exp>-9</exp></number>}\\
		 &amp; = <unit_number><number><coeff>3.06</coeff><exp>-19</exp></number><unit>J</unit></unit_number>
		\end{align}
		</latex>
                

                <para>For <unit_number><number>300</number><unit>nm</unit></unit_number>:</para>
                

                <latex display="block">
		\begin{align}
		 E&amp; = \frac{hc}{\lambda }\\
		 &amp; = \frac{\left(<number><coeff>6.63</coeff><exp>-34</exp></number>\right)\times \left(<number><coeff>3.00</coeff><exp>8</exp></number>\right)}{<number><coeff>300</coeff><exp>-9</exp></number>}\\
		 &amp; =<unit_number><number><coeff>6.63</coeff><exp>-19</exp></number><unit>J</unit></unit_number>
